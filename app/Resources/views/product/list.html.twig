{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <a class="btn btn-primary pull-right new-product" href="{{ path('product_new') }}">
                    Create new product
                </a>
            </div>
            <div class="col-xs-12">
                <div class="table-responsive">
                    <table class="table products-table">
                        <tr>
                            <th class="text-center">Image</th>
                            <th class="text-nowrap text-center">Name</th>
                            <th class="text-center">Price</th>
                            <th>Description</th>
                            <th class="text-center">Color</th>
                            <th class="text-center">Year</th>
                            <th class="text-center">Actions</th>
                        </tr>
                        {% if(products|length) %}
                            {% for product in products %}
                                <tr class="product-row">
                                    <td class="text-center">
                                        <img
                                                src="{{ asset('images/iphone7.jpg') }}"
                                                alt="phone"
                                                width="181"
                                                height="333"
                                        >
                                    </td>
                                    <td class="text-nowrap text-center">{{ product.name }}</td>
                                    <td class="text-center">{{ product.price }}</td>
                                    <td>{{ product.description }}</td>
                                    <td class="text-center">{{ product.color }}</td>
                                    <td class="text-center">{{ product.year }}</td>
                                    <td class="text-center">
                                        <div>
                                            <a
                                                    class="btn btn-success"
                                                    href="{{ path('product_show',{'id':product.id}) }}"
                                            >
                                                <i class="fa fa-desktop"></i>
                                                Details
                                            </a>
                                        </div>
                                        <div>
                                            <a
                                                    class="btn btn-success"
                                                    href="{{ path('product_edit',{'id':product.id}) }}"
                                            >
                                                <i class="fa fa-edit"></i>
                                                Edit
                                            </a>
                                        </div>
                                        <div>
                                            <button
                                                    class="btn btn-danger delete"
                                                    data-url="{{ path('product_delete',{'id':product.id}) }}"
                                            >
                                                <i class="fa fa-remove"></i>
                                                Delete
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        {% else %}
                            <tr class="product-row">
                                <td colspan="6">Products no found</td>
                            </tr>
                        {% endif %}
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}