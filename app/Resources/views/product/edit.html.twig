{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <a class="btn btn-primary pull-right" href="{{ path('product_list') }}">back</a>
            </div>
            <div class="col-xs-12">
                <h1>Edit Genus</h1>

                {{ form_start(productForm) }}
                {{ form_row(productForm.name) }}
                {{ form_row(productForm.price) }}
                {{ form_row(productForm.description) }}
                {{ form_row(productForm.color) }}
                {{ form_row(productForm.year) }}
                <div><strong>Upload new image</strong></div>
                <div class="wrapper-image-block">
                    <img class="image" src="{{ asset(imageName ? ([imageUrlPrefix,imageName]|join) : '/images/no-image.jpg') }}">
                    <div class="wrap-file">
                        {{ form_row(productForm.image) }}
                    </div>
                </div>
                <div class="offset-top-10">
                    <button type="submit" class="btn btn-primary" formnovalidate>Save</button>
                </div>
                {{ form_end(productForm) }}
            </div>
        </div>
    </div>
{% endblock %}
